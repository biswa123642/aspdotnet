@model CGP.Feature.Account.Model.UserModel
@using CGP.Foundation.SitecoreExtensions.Utilities

<div class="container">


    <!-- Modal -->
    <div class="modal fade" id="userlogin-modal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">

                <div class="modal-body user-login-form" id="formlogin">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>

                    <div class="modal-title">
                        <h2>@SitecoreUtil.DefaultDictionaryValue("Please_Login")</h2>
                    </div>

                    <div class="form-horizontal">

                        @if (ViewBag.PasswordAuth == null)
                        {
                            <div class="form-group">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control bt-default-input", @placeholder = @SitecoreUtil.DefaultDictionaryValue("UserName") } })
                            </div>
                        }
                        <div class="form-group">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control bt-default-input", type = "password", @placeholder = @SitecoreUtil.DefaultDictionaryValue("Password") } })
                        </div>
                        <div class="form-group">
                            <label class="checkbox">
                                <input name="rememberMe" id="user-login-remember" value="remember-me" type="checkbox" checked>@SitecoreUtil.DefaultDictionaryValue("Remember_Me")
                            </label>
                        </div>
                        <div class="form-group position-center">
                            <p class="error-message" id="enter-credential-error">@SitecoreUtil.DefaultDictionaryValue("Enter_Credential")</p>
                            <input type="submit" value=@SitecoreUtil.DefaultDictionaryValue("Submit") class="sxa-btn-default sxa-btn-submit" id="userlogin" />
                            <button type="button" class="sxa-btn-default cancel">@SitecoreUtil.DefaultDictionaryValue("Cancel")</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

